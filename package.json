{
  "name": "test-playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node ./node_modules/@cucumber/cucumber/bin/cucumber.js --require-module ts-node/register --require-module tsconfig-paths/register --require ./src/steps/**/*.ts --require ./src/support/hooks.ts ./src/features/**/*.feature",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "clean:report": "rimraf allure-results allure-report",
    "allure": "npm run clean:report && npm run test && npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/messages": "^30.1.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "playwright": "^1.56.1",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
